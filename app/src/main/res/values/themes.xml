<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Task" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- text styles -->

    <style name="Text" parent="TextAppearance.AppCompat" />

    <!-- 'A' color text styles (dynamic) -->

    <style name="Text.A" parent="Text">
        <item name="android:textColor">@color/color_text_A</item>
    </style>

    <style name="Text.A.16" parent="Text.A">
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="Text.A.16.Regular" parent="Text.A.16">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- 'B' color text styles (dynamic) -->

    <style name="Text.B" parent="Text">
        <item name="android:textColor">@color/color_text_B</item>
    </style>

    <style name="Text.B.16" parent="Text.B">
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="Text.B.16.Regular" parent="Text.B.16">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text.B.12.Regular" parent="Text.B.16.Regular">
        <item name="android:textSize">@dimen/_12sp</item>
    </style>



</resources>